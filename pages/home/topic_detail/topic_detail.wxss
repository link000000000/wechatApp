/** 评论框 **/
.comment-input-container{
  position:fixed;
  bottom: 0rpx;
  z-index:100;
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: 10rpx;
  background: #ffffff;
  box-shadow: 0px 0px 70rpx -40rpx rgba(0,0,0,0.54); 
  justify-content: space-around;
}

.comment-input-container textarea{
  width: 70%;
  font: 25rpx;
  background: #f1f1f1;
  border-radius: 20px;
  padding: 20rpx 10rpx;
}

.comment-input-container .send-button{
  width: 15%;
  height: 70rpx;
  font-size: 30rpx;
  color: white;
  margin-right: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  color: #604708;
  background: linear-gradient(150deg,#ffd73b 0%, #fbc346 100%);
  border-radius: 40rpx;
  box-shadow: 0px 0px 12rpx 0px rgba(229,161,34,0.69); 
}

