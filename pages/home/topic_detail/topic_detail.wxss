page{
  background: #ffffff;
}

.topic-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.topic-content{
  width: 92%;
  display: flex;
  flex-direction: column;
  height: 500rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0px 0px 20rpx 0px rgba(193,193,193,0.71); 
  position:relative;
  margin-top: 70rpx;
}

.topic-title{
  width: 100%;
  display: flex;
  flex-direction: column;
  position:absolute;
}

.title{
  display: flex;
  flex-direction: column;
  width: 250rpx;
  height: 70rpx;
  background: linear-gradient(159deg,#ffd73b 11%, #fbc346 94%);
  border-radius: 10rpx;
  box-shadow: 0px 0px 12rpx 0px rgba(196,174,134,0.50); 
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 100;
  top: -35rpx;
  margin: 0rpx auto;
}

.topic-image{
  width: 100%;
  height: 350rpx;
  border-top-right-radius: 20rpx;
  border-top-left-radius: 20rpx;
}

.topic-data{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 150rpx;
  align-items: center;
  justify-content: center;
}

.topic-data-content{
  width: 92%;
  height: 80rpx;
  font-size: 28rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #303030;
  line-height: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.topic-bottom{
  width: 100%;
  height: 70rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.topic-bottom-content{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.topic-bottom-left{
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 22rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #303030;
  line-height: 32rpx;
  margin-right: 10rpx;
}

.topic-bottom-left image{
  width: 40rpx;
  height: 40rpx;
}

.topic-bottom-middle{
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  font-size: 22rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #303030;
  line-height: 32rpx;
  margin-right: 10rpx;
}

.topic-bottom-middle image{
  width: 50rpx;
  height: 50rpx;
}

.topic-bottom-right{
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  font-size: 22rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #303030;
  line-height: 32rpx;
}

.topic-bottom-right image{
  width: 50rpx;
  height: 50rpx;
}
.footer .footer-praise{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.footer .footer-visit{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.footer .footer-comment{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.footer-praise image{
  width: 40rpx;
  height: 40rpx;
  padding-right: 5rpx;
}

.footer-visit image{
  width: 50rpx;
  height: 50rpx;
  padding-right: 5rpx;
}

.footer-comment image{
  width: 50rpx;
  height: 50rpx;
  padding-right: 5rpx;
}

/** 用户评论内容 **/
.user-comment{
  width: 92%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  margin-top: 20rpx;
}

.user-comment .comment-item{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 50rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0px 0px 45rpx -20rpx rgba(193,193,193,0.71); 
}

.comment-item .left{
  width: 100%;
  display: flex;
  flex-direction: row;
}

.comment-item .right{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-bottom: 20rpx;
  align-items: center;
}

.comment-item .content{
  font-size: 30rpx;
  font-family: SF Pro Text, SF Pro Text-Regular;
  font-weight: 400;
  text-align: LEFT;
  color: #303030;
  line-height: 28rpx;
  padding: 30rpx 0rpx;
}

.user-image{
  position: relative;
  width: 22%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
}

.user-image .user-avatar{
  width: 110rpx;
  height: 110rpx;
  border-radius: 30rpx;
  border: 4rpx solid #303030;
  z-index: 100;
  position: absolute;
  left: 18rpx;
  top: -35rpx;
}

.avatar-border{
  width: 80rpx;
  height:80rpx;
  position: absolute;
  z-index: 200;
  top: -55rpx;
}

.right .create_at{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: darkgray;
  font-size: 25rpx;
  margin-top: 5rpx;
  align-items: center;
}

.comment-icon image{
  width: 50rpx;
  height: 50rpx;
}

.comment-name{
  width: 75%;
  font-size: 30rpx;
  font-family: SF Pro Text, SF Pro Text-Medium;
  font-weight: 500;
  text-align: LEFT;
  color: #303030;
  line-height: 30rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.comment-delete-icon{
  width: 42rpx;
  height: 42rpx;
}

.right .right-item{
  width: 95%;
}

.right-item .time-deleted{
  display: flex;
  flex-direction: row;
  font-size: 20rpx;
  font-family: SF Pro Text, SF Pro Text-Regular;
  font-weight: 400;
  text-align: LEFT;
  color: #303030;
  line-height: 18rpx;
}

.time-deleted .delete-comment{
  padding-left: 30rpx;
}

.right .reply-comment{
  width: 95%;
  display: flex;
  flex-direction: column;
  background: WhiteSmoke;
  margin-top: 10rpx;
  padding: 15rpx;
}

.reply-comment .reply-container{
  display: inline;
}

.reply-comment .reply-item{
  font-size: 35rpx;
  font-weight: 200;
  display: flex;
  flex-direction: row;
}

.reply-item .reply-user{
  color: #0061b2;
}

