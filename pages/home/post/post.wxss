page{
  background: #ffffff;
}

.post-container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.form{
  width: 100%;
  margin-top: 1rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
}

.textarea-content{
  width:87%;
  border: 6rpx solid #303030;
  border-radius: 20rpx;
  padding: 20rpx 10rpx;
}

.image-form{
  width: 90%;
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
}

.image-form .select-image{
  width: 100%;
  display: flex;
  flex-direction: column;
  flex-wrap:wrap;
}

.middle{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 5rpx;
  background: white;
}

.middle .location{
  display: flex;
  flex-direction: row;
  padding: 15rpx 0rpx;
  font-weight: 200;
  font-size: 35rpx;
  border-bottom-style:solid;
  border-width:1rpx;
  border-color: #F0F8FF;
  align-items: center;
  justify-content: center;
}

.like-content{
  width: 90%;
  height: 75rpx;
  font-weight: 200;
  font-size: 30rpx;
  text-align: center;

  border: 4rpx solid #303030;
  border-radius: 20rpx;
}


.middle .private{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 15rpx;
  font-weight: 200;
  font-size: 35rpx;
  align-items: center;
}

.item{
  margin-left: 15rpx;
}


.location-image image{
  width: 60rpx;
  height: 60rpx;
  margin-top: 5rpx;
}


.button-container{
  display: flex;
  flex-direction: column;
  bottom: 0rxp;
}

.button-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 80rpx;
  align-items: center;
  text-align: center;
}

.button{
  height: 90rpx;
  width: 90%;
  background: linear-gradient(110deg,#ffd73b 0%, #fbc346 100%);
  border-radius: 20rpx;
  box-shadow: 0px 0px 8rpx 2rpx rgba(247,171,30,0.81); 
  display: flex;
  flex-direction: column;
  align-content: center;
  justify-content: center;
}

.tips{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  align-items: center;
  padding-bottom: 10rpx;
}

.tips .warming{
  color: darkgray;
  width: 95%;
  font-size: 30rpx;
}

.power-by{
  width: 100%;
  font-size: 25rpx;
  color: gainsboro;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 60rpx;
}