page{
  background: white;
}

.post-container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;

}

.post-container .form{
  width: 100%;
  background: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 1rpx;
}

.textarea-content{
  padding: 15rpx;
  width: 90%;
  border: 4rpx solid #303030;
  border-radius: 20rpx;
}

.form .input{
  width: 95%;
  font-weight: 200;
  font-size: 30rpx;
  align-items: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx;
}


.image-form{
  width: 95%;
  display: flex;
  flex-direction: column;
}

.image-form .select-image{
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-bottom: 40rpx;
  flex-wrap:wrap;
}

.select-image .upload-image{
  width: 130rpx;
  height: 130rpx;
  margin-right: 10rpx;
  margin-top: 10rpx;
}

.select-image .image-item{
  position: relative;
}

.remove-image{
  width: 35rpx;
  height: 35rpx;
  position:absolute;
  top: 0rpx;
  left: 0rpx;
  z-index: 10;
  
}

.item{
  margin-left: 15rpx;
}


.location-image image{
  width: 60rpx;
  height: 60rpx;
  margin-top: 5rpx;
}

.button-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 80rpx;
  align-items: center;
  text-align: center;
}

.button-container .bt{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 90%;
  height: 90rpx;
  background: linear-gradient(110deg,#ffd73b 0%, #fbc346 100%);
  border-radius: 10px;
  box-shadow: 0px 0px 4px 1px rgba(247,171,30,0.81); 
  font-size: 30rpx;
  font-family: SF Pro Text, SF Pro Text-Regular;
  font-weight: 400;
  color: #303030;
}

/** 加载更多 **/

.get-more{
  height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  font-size: 30rpx;
  font-weight: 200;
  width: 100%;
  background: white;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.get-more image{
  width: 40rpx;
  height: 40rpx;
}

.get-more .get-more-item{
  display: flex;
  flex-direction: row;
}

.loading{
  margin-left: 15rpx;
}

.no-more-data{
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  justify-content: space-around;
  align-items: center;
  font-size: 25rpx;
  font-weight: 200;
  text-align: center;
  color: darkgray;
}
