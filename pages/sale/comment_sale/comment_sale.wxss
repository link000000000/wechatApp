  border-color: #66CDAA;
  padding: 0rpx 40rpx;
  border-radius: 50rpx;
  margin-bottom: 50rpx;
}

.friend-info-container .major{
  width: 95%;
  padding: 5rpx 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-family: SF Pro Text, SF Pro Text-Regular;
  font-weight: 400;
  text-align: LEFT;
  color: #303030;
}

.like-icon{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.like-icon-content{
  width: 90rpx;
  height: 140rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-family: SF Pro Text, SF Pro Text-Medium;
  font-weight: 500;
  text-align: LEFT;
  color: #303030;
  line-height: 28rpx;
