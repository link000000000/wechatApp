/** #F5F5F5 **/
.detail-container{
  width: 90%;
  height: 1100rpx;
  display: flex;
  flex-direction: column;
  background: #f9f9f9;
  border: 4rpx solid #000000;
  border-radius: 30rpx;
  box-shadow: 0px 8rpx 100rpx -34rpx rgba(0,0,0,0.25); 
  margin-top: 30rpx;
}

.header-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  height: 65%;
  position: relative;
}

.genber{
  width: 90rpx;
  height: 90rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #303030;
  position: absolute;
  z-index: 200;
  left: 20rpx;
  bottom: 20rpx;
}

.genber image{
  width: 80rpx;
  height: 80rpx;
}

.header-container .image-container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.image-item{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
}

.image-container .sale-image{
  border-top-left-radius: 26rpx;
  border-top-right-radius: 26rpx;
  height: 100%;
  width: 100%;
}

.friend-info-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 35%;
}

.friend-info-container .friend-name{
  font-weight: bold;
  padding: 30rpx 0rpx;
  font-size: 40rpx;
  font-family: SF Pro Text, SF Pro Text-Bold;
  font-weight: 700;
  text-align: LEFT;
  color: #303030;
  line-height: 40rpx;
}

.friend-info-container .delete-opetate{
  font-size: 20rpx;
  color: gray;
}


.friend-info-container .gender{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 25rpx;
  color: #66CDAA;
  border-style:solid;
