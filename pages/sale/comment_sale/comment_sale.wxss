  z-index: 100;
  bottom: -65rpx;
}

.like-icon image{
  width: 80rpx;
  height: 80rpx;
}

.like-tab{
  width: 140rpx;
  height: 60rpx;
  background: linear-gradient(139deg,#ffd73b 0%, #fbc346 100%);
  border-radius: 30rpx;
  box-shadow: 0px 0px 6rpx 0px rgba(247,171,30,0.81); 
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 25rpx;
  margin-bottom: 20rpx;
  margin-top: 15rpx;
}

.like-introduce{
  font-size: 32rpx;
  font-family: SF Pro Text, SF Pro Text-Bold;
  font-weight: 700;
  text-align: CENTER;
  color: #000000;
  line-height: 32rpx;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}

.operate {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  color: white;
  margin-top: 50rpx;
}

.operate .share-button{
  width: 25%;
  border-radius: 10rpx;
  background: center center #AED6F1;
  background-image: linear-gradient(315deg,#48C9B0,#884EA0);
  background-size: 104% 104%;
  color: #fff;
}

.share-button .button{
  background: none !important;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 30rpx;
}

.button::after{
  border: none;
}

.operate .collect{
  width: 25%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-left: 30rpx;
  font-size: 30rpx;
  border-radius: 10rpx;

  background: center center #AED6F1;
  background-image: linear-gradient(315deg,#48C9B0,#884EA0);
  background-size: 104% 104%;
  color: #fff;
}

.comment-container{
  width: 100%;
